# Set simulation parameters
set NumericStdNoWarnings 1
set StdArithNoWarnings 1

# Set wave display options
set WaveDisplayLimit 1000
set WaveDisplayDigitLimit 16

# Set simulation time resolution
set TimeResolution 1ps

# Set default radix for display
set DefaultRadix hexadecimal

# Set default wave display format
set WaveDisplayFormat %t %h

# Set default wave display range
set WaveDisplayRange 0 1000ns 